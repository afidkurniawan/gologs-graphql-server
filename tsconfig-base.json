{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2020",
    "types": ["node"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["./dist/**/*", "./**/*.old.*"]
}
